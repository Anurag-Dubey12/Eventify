<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_marginBottom="15sp"
        >
        <TextView
            android:id="@+id/name_ascen"
            android:layout_width="380sp"
            android:layout_height="wrap_content"
            android:text="Name ascending"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:background="@color/light_blue_50"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_marginBottom="15sp"
        >
        <TextView
            android:id="@+id/name_decen"
            android:layout_width="380sp"
            android:layout_height="wrap_content"
            android:text="Name descending"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:background="@color/light_blue_50"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_marginBottom="15sp"
        >
        <TextView
            android:id="@+id/Amount_ascen"
            android:layout_width="380sp"
            android:layout_height="wrap_content"
            android:text="Amount ascending"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:background="@color/light_blue_50"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_marginBottom="15sp"
        >
        <TextView
            android:id="@+id/Amount_decen"
            android:layout_width="380sp"
            android:layout_height="wrap_content"
            android:text="Amount decending"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:background="@color/light_blue_50"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>
</LinearLayout>