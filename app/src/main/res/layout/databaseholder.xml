<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/valueediteffect"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/RecyclerBack">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="54sp"
                android:layout_height="64sp"
                android:layout_marginStart="4dp"
                android:src="@drawable/databaseevent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/DatabaseName"
                android:layout_width="245dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:text="Hjj"
                style="@style/RecyclerTextColor"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="337dp"
                android:layout_height="28dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/DatabaseName">

                <TextView
                    android:id="@+id/DatabaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    style="@style/RecyclerTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/DatabaseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    style="@style/RecyclerTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/DatabaseDelete"
                    android:layout_width="10sp"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    style="@style/RecyclerDelete" />
            </LinearLayout>

            <ImageView
                android:id="@+id/DatabaseChange"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:src="@drawable/change"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.804"
                app:layout_constraintStart_toEndOf="@+id/DatabaseName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>