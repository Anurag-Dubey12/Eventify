<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RecyclerBack">
        <LinearLayout
            android:id="@+id/Vendor_payment_info"
            android:layout_width="200sp"
            android:layout_toRightOf="@id/EditPayment"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Vendortid"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:textStyle="bold"
                android:textSize="20sp"
                style="@style/RecyclerTextColor"

                />
            <TextView
                android:id="@+id/VendorPaymentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                style="@style/RecyclerTextColor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/Vendor_payment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Vendorpaymentdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                style="@style/RecyclerTextColor"

                />
            <TextView
                android:id="@+id/Vendorpaymentamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                style="@style/RecyclerTextColor"
                />
            <TextView
                android:id="@+id/Vendorpaymentstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                style="@style/RecyclerTextColor"
                />
        </LinearLayout>
<!--        <com.google.android.material.radiobutton.MaterialRadioButton-->
<!--            android:id="@+id/Radiopaid"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center_vertical"-->
<!--            />-->
        <ImageView
            android:id="@+id/EditPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/edit"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>