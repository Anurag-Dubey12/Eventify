<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/HolderScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event_Details_Activity.TaskDetails">

    <ScrollView
        style="@style/HolderScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/budget_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="75sp"
                android:orientation="vertical">

                <TextView
                    style="@style/TEXTColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/task_name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/TaskNameET"
                    style="@style/EditValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginBottom="10sp"
                    android:inputType="text" />

                <TextView
                    style="@style/TEXTColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="@string/Category"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Taskcategory_button"
                    style="@style/EditValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginBottom="10sp"
                    android:paddingTop="10sp"
                    android:text="@string/select_a_category"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/drop_arrow" />

                <TextView
                    style="@style/TEXTColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="@string/note"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/TaskNoteET"
                    style="@style/EditValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginBottom="10sp" />

                <TextView
                    style="@style/TEXTColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Task Status"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/TaskPendingbut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#F2FFCA"
                        android:text="@string/taskpending"
                        android:textColor="@color/black" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/Taskcombut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#F2FFCA"
                        android:text="@string/completed"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    style="@style/TEXTColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/taskdate"
                    style="@style/EditValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/calender"
                    android:hint="Select Your Task Date"
                    android:textSize="20sp" />

