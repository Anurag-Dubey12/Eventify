<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/HolderScreen"
    tools:context=".Event_Details_Activity.BudgetDetails">

   <include
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       layout="@layout/budget_menu"/>
   <LinearLayout

       android:layout_marginTop="75sp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/budget_details"
          android:textSize="20sp"
          style="@style/TEXTColor"
          android:layout_marginBottom="15sp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Name"
          style="@style/TEXTColor"
          android:layout_marginStart="9.5sp"
          android:textSize="20sp"
          android:layout_marginBottom="5sp"
          />
      <EditText
          android:id="@+id/NameET"
          android:layout_width="390sp"
          android:layout_gravity="center"
          android:layout_height="35sp"
          style="@style/EditValueStyle"
          android:layout_marginBottom="10sp"
          android:inputType="text" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Category"
          style="@style/TEXTColor"
          android:layout_marginStart="9.5sp"
          android:textSize="20sp"
          android:layout_marginBottom="5sp"

          />
<!--     <TextView-->
<!--         android:id="@+id/categoryselection"-->
<!--         android:layout_width="match_parent"-->
<!--         android:layout_height="wrap_content"-->
<!--         android:drawableEnd="@drawable/drop_arrow"-->
<!--         android:background="@drawable/category_button"-->
<!--         android:text="@string/select_a_category"-->
<!--         android:textSize="16sp"-->
<!--         android:textAlignment="center"-->
<!--         android:textColor="@color/black"-->
<!--         android:textStyle="bold"-->
<!--         android:layout_marginBottom="10sp"-->
<!--         />-->
       <TextView
           android:id="@+id/categoryselection"
           android:layout_width="390sp"
           android:layout_height="40sp"
           android:textAlignment="center"
           android:layout_gravity="center"
           android:paddingTop="10sp"
           android:textStyle="bold"
           android:drawableEnd="@drawable/drop_arrow"
           style="@style/EditValueStyle"
           android:text="@string/select_a_category"
           android:layout_marginBottom="10sp"
           />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/note"
          style="@style/TEXTColor"
          android:textSize="20sp"
          android:layout_marginStart="9.5sp"
          android:layout_marginBottom="5sp"

          />
      <EditText
          android:id="@+id/NoteET"
          android:layout_width="390sp"
          android:layout_gravity="center"
          android:layout_height="35sp"
          style="@style/EditValueStyle"
          android:layout_marginBottom="10sp"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/estimated_amount"
          android:layout_marginStart="9.5sp"
          android:textSize="20sp"
          style="@style/TEXTColor"
          android:layout_marginBottom="5sp"
          />
      <EditText
          android:id="@+id/Estimated_Amount"
          android:layout_width="390sp"
          android:layout_gravity="center"
          android:layout_height="35sp"
          android:inputType="numberDecimal"
          style="@style/EditValueStyle"
          android:layout_marginBottom="10sp"
          />
      <LinearLayout
          android:id="@+id/PaymentBalance"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="40sp"
             android:text="@string/balance"
             android:textSize="20sp"
             android:textStyle="bold"
             android:layout_marginBottom="10sp"
             />
         <TextView
             android:id="@+id/Balancetv"
             android:layout_width="match_parent"
             android:layout_height="40sp"
             android:textSize="20sp"
             android:textStyle="bold"
             android:layout_marginBottom="10sp"

             />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/addapyment"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
         android:orientation="horizontal">
         <TextView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="Add Payment"
             android:textSize="16sp"
             style="@style/TEXTColor"
             />
         <ImageView
             android:id="@+id/paymentadd"
             android:layout_width="50sp"
             android:layout_height="40sp"
             android:src="@drawable/add" />
      </LinearLayout>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/PaymentRecycler"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

   </LinearLayout>
</RelativeLayout>
</ScrollView>
