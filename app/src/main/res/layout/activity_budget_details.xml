<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event_Details_Activity.BudgetDetails">

   <RelativeLayout
       style="@style/HolderScreen"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.5"
       tools:context=".Event_Details_Activity.BudgetDetails">

      <include
          layout="@layout/budget_menu"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <LinearLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="75sp"
          android:orientation="vertical">

         <TextView
             style="@style/TEXTColor"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="15sp"
             android:text="@string/budget_details"
             android:textSize="20sp" />

         <TextView
             style="@style/TEXTColor"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_9sdp"
             android:layout_marginBottom="@dimen/_3sdp"
             android:textSize="@dimen/_16sdp"
             android:text="Name"
             />

         <EditText
             android:id="@+id/NameET"
             style="@style/EditValueStyle"
             android:layout_width="@dimen/_300sdp"
             android:layout_height="@dimen/_30sdp"
             android:layout_marginBottom="@dimen/_7sdp"
             android:layout_gravity="center"
             android:inputType="text" />

         <TextView
             style="@style/TEXTColor"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_9sdp"
             android:layout_marginBottom="@dimen/_3sdp"
             android:textSize="@dimen/_16sdp"
             android:text="@string/Category"

             />
         <TextView
             android:id="@+id/categoryselection"
             style="@style/EditValueStyle"
             android:layout_width="@dimen/_300sdp"
             android:layout_height="@dimen/_30sdp"
             android:layout_gravity="center"
             android:layout_marginBottom="@dimen/_7sdp"
             android:drawableEnd="@drawable/drop_arrow"
             android:paddingTop="10sp"
             android:text="@string/select_a_category"
             android:textAlignment="center"
             android:textStyle="bold" />

         <TextView
             style="@style/TEXTColor"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_9sdp"
             android:layout_marginBottom="@dimen/_3sdp"
             android:textSize="@dimen/_16sdp"
             android:text="@string/note"

             />

         <EditText
             android:id="@+id/NoteET"
             style="@style/EditValueStyle"
             android:layout_width="@dimen/_300sdp"
             android:layout_height="@dimen/_30sdp"
             android:layout_marginBottom="@dimen/_7sdp"
             android:layout_gravity="center"
             />

         <TextView
             style="@style/TEXTColor"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_9sdp"
             android:layout_marginBottom="@dimen/_3sdp"
             android:textSize="@dimen/_16sdp"
             android:text="@string/estimated_amount"
             />

         <EditText
             android:id="@+id/Estimated_Amount"
             style="@style/EditValueStyle"
             android:layout_width="@dimen/_300sdp"
             android:layout_height="@dimen/_30sdp"
             android:layout_marginBottom="@dimen/_7sdp"
             android:layout_gravity="center"
             android:inputType="numberDecimal" />
         <LinearLayout
             android:id="@+id/warning_Message"
             android:layout_width="350sp"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="10sp"
             android:layout_gravity="center_horizontal"
             android:visibility="gone"
             >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                style="@style/show_warning"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:text=" Amount exceeds estimated"
                style="@style/TEXTColor"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />
         </LinearLayout>
         <LinearLayout
             android:id="@+id/PaymentBalance"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginBottom="10sp"
                android:text="@string/balance"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Balancetv"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/addapyment"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:visibility="gone"
             >
            <TextView
                style="@style/TEXTColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Payment"
                android:textSize="16sp" />
            <TextView
                style="@style/TEXTColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Payment :"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/totalPayment"
                style="@style/TEXTColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/paymentadd"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/add" />
         </LinearLayout>

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/PaymentRecycler"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:visibility="gone" />

      </LinearLayout>
   </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
